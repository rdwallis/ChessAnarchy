<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:w='urn:import:com.wallissoftware.chessanarchy.client.widgets'>
    <ui:style>
    </ui:style>
    <g:LayoutPanel width="100%" height="30px">
    	<g:layer left="0px" right="100px" top="0px" bottom="0px">
    		<w:PlaceHolderTextBox ui:field="messageBox" placeHolder="Type a message here" addStyleNames="expand"></w:PlaceHolderTextBox>
    	</g:layer>
    	<g:layer width="90px" right="0px" top="0px" bottom="0px">
    		<g:Button ui:field="sendButton" addStyleNames="expand">Send</g:Button>
    	</g:layer>
    </g:LayoutPanel>
</ui:UiBinder>
