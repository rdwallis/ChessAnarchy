<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
     .close {
		cursor:pointer;
	}
	.popup {
		z-index: 11;
	}
    </ui:style>
    <g:DialogBox autoHideOnHistoryEventsEnabled="true" autoHideEnabled="true" ui:field="dialogBox" width="300px" addStyleNames="{style.popup}">
    	<g:VerticalPanel horizontalAlignment="CENTER">
    		<g:Label ui:field="description"></g:Label>
    		<g:Anchor ui:field="close" addStyleNames="{style.close}">Close</g:Anchor>
    	</g:VerticalPanel>
    </g:DialogBox>
</ui:UiBinder>
