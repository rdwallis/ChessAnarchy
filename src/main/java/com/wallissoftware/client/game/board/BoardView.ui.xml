<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="com.wallissoftware.client.game.board.BoardView.MyStyle">
    @def lightSquare #FFCE9E;
    @def darkSquare #D18B47;
    	.boardBackground {
			width: 400px;
			height: 400px;
			border: 2px solid gray;
		}
		
		.boardBackground td {
			width: 50px;
			height:50px;
		}
		
		.boardBackground tr {
			height: 50px;
		}
		
		.boardBackground tr:nth-child\(even\) td:nth-child\(odd\), .boardBackground tr:nth-child\(odd\) td:nth-child\(even\) {
			background-color: darkSquare;
		}
		
		 .boardBackground tr:nth-child\(even\) td:nth-child\(even\), .boardBackground tr:nth-child\(odd\) td:nth-child\(odd\) {
			background-color: lightSquare;
		}
		
		.gridLabel {
			font-size: 16px;
		
		}
    </ui:style>
    <g:LayoutPanel width="444px" height="444px" ui:field="layoutPanel">
    	<g:layer left="8px" width="404px" top="8px" height="404px">
    		<g:Grid ui:field="boardBackground" addStyleNames="{style.boardBackground}" cellSpacing="0" cellPadding="0" borderWidth="0">
    		</g:Grid>
    	</g:layer>
    	
    	<g:layer left="10px" width="400px" top="10px" height="400px">
    		<g:AbsolutePanel ui:field="dropSurface" width="400px" height="400px"></g:AbsolutePanel>
    	</g:layer>
    	
    </g:LayoutPanel>
</ui:UiBinder>
