<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="com.wallissoftware.client.game.board.BoardView.MyStyle">
    @def lightSquare #FFCE9E;
    @def darkSquare #D18B47;
    	.board {
			width: 400px;
			height: 400px;
			border: 2px solid gray;
		}
		
		.board td {
			width: 50px;
			height:50px;
			overflow:hidden;
		}
		
		.board tr:nth-child\(even\) td:nth-child\(odd\), .board tr:nth-child\(odd\) td:nth-child\(even\) {
			background-color: darkSquare;
		}
		
		 .board tr:nth-child\(even\) td:nth-child\(even\), .board tr:nth-child\(odd\) td:nth-child\(odd\) {
			background-color: lightSquare;
		}
		
		.gridLabel {
			font-size: 16px;
		
		}
    </ui:style>
    <g:LayoutPanel width="444px" height="444px" ui:field="layoutPanel">
    	<g:layer left="10px" width="404px" top="10px" height="404px">
    		<g:Grid ui:field="board" addStyleNames="{style.board}" cellSpacing="0" cellPadding="0">
    		</g:Grid>
    	</g:layer>
    	
    </g:LayoutPanel>
</ui:UiBinder>
